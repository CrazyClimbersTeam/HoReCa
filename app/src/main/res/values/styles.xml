<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="titleTextStyle">@style/AppTheme_ActionBar_Title</item>
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>

    </style>

    <style name="AppTheme_ActionBar_Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">72dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Registration.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">192dp</item>
    </style>

    <style name="Registration.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">170dp</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/app_main_color</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
    <item name="android:background">@drawable/spinner_drop_down_item_background</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
    <item name="android:textColor">#000</item>
    </style>

</resources>
