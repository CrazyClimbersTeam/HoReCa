<!-- The important thing to note here is the added fitSystemWindows -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:alpha="0.8"
            android:background="@color/app_main_color"/>

        <com.crazyclimbersteam.horeca.tools.ParallaxView
            xmlns:parallax="http://schemas.android.com/apk/res-auto"
            android:id="@+id/parallax_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            parallax:parallaxValue="@dimen/parallax_value"
            >
            <!-- remove me -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/forret_splash_layout"
                />
            <!-- fragment screens will be here -->
            <FrameLayout
                android:id="@+id/screen_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.crazyclimbersteam.horeca.tools.ParallaxView>
    </LinearLayout>
    <fragment
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.crazyclimbersteam.horeca.fragment.base.drawer.NavigationMenuFragment"
        />
</android.support.v4.widget.DrawerLayout>
