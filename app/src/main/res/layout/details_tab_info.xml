<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/details_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/details_tab_info_title_text_size"
            android:textColor="@color/detail_info_title_text_color"
            android:layout_marginLeft="16dp"
            android:text="MyTitle"
            android:layout_centerVertical="true"
            />
        <RatingBar
            android:id="@+id/details_info_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.crazyclimbersteam.horeca.activity.detail.fragment.info.view.DetailsInfoContactsView
            android:id="@+id/details_info_contacts_view"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <com.crazyclimbersteam.horeca.activity.detail.fragment.info.view.SquaredImageView
            android:id="@+id/details_info_map_preview"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ferret"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/details_info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/details_tab_info_text_size"
        android:textColor="@color/detail_info_text_color"
        android:text="Please add some description here, because im not sure what should i wirte here
        at the current moment"
        />
</LinearLayout>