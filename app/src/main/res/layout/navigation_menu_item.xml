<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_menu_item_height"
    android:gravity="center_vertical"
    android:background="@android:color/holo_orange_light">

    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navigation_menu_item_icon_margin_left"
        android:src="@drawable/ferret"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navigation_menu_item_title_margin_left"
        android:textColor="@drawable/navigation_menu_item_text_selector" />
</RelativeLayout>