<!-- The important thing to note here is the added fitSystemWindows -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
    >
    <com.alexmirash.parallaxheaderviewpager.view.ParallaxHeaderPagerView
        android:id="@+id/detail_parallax_header_pager_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:parallaxHeightFactor="0.6"
        app:isTabUnderHeader="true"
        app:minHeaderHeight="@dimen/tab_height_default"
        app:tabStripLayout="@layout/details_tab_strip"
        />
</FrameLayout>